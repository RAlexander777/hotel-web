---
// src/pages/index.astro
// Obtenemos la URL base correcta (por ejemplo: /hotel-web/)
const base = import.meta.env.BASE_URL;
// Aseguramos que termine en / antes de agregar 'es/'
const cleanBase = base.endsWith('/') ? base : `${base}/`;
const target = `${cleanBase}es/`;
---

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Redireccionando...</title>
    <meta http-equiv="refresh" content={`0;url=${target}`} />
    
    <link rel="canonical" href={target} />
    
    <script define:vars={{ target }}>
        window.location.href = target;
    </script>

    <style>
        body { margin: 0; padding: 0; overflow: hidden; background-color: #24211f; }
    </style>
</head>
<body>
    </body>
</html>