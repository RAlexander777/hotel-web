    <section
        class="gallery-section container reveal"
        id="galeria"
        x-data="{
        isOpen: false,
        currentImageIndex: 0,
        images: [
            { src: '/hotel-web/images/hero.webp', alt: 'Recepción Hostal Aquarius' },
            { src: '/hotel-web/images/rooms/doble/1.png', alt: 'Habitación Doble con dos camas' },
            { src: '/hotel-web/images/rooms/matrimonial/3.png', alt: 'Habitación Matrimonial' },
            { src: '/hotel-web/images/rooms/simple/2.png', alt: 'Habitación Simple' },
            { src: '/hotel-web/images/hero3.jpg', alt: 'Área de desayuno' },
            { src: '/hotel-web/images/hero5.jpg', alt: 'Detalle de la cama' },
            { src: '/hotel-web/images/hero2.jpg', alt: 'Vista del comedor' },
            { src: '/hotel-web/images/tours/uros.jpg', alt: 'Experiencia en las Islas de los Uros' }
        ],
        openLightbox(index) {
            this.currentImageIndex = index;
            this.isOpen = true;
        },
        closeLightbox() {
            this.isOpen = false;
        },
        nextImage() {
            this.currentImageIndex = (this.currentImageIndex + 1) % this.images.length;
        },
        prevImage() {
            this.currentImageIndex = (this.currentImageIndex - 1 + this.images.length) % this.images.length;
        }
    }"
        @keydown.escape.window="closeLightbox()"
        @keydown.arrow-right.window="if (isOpen) nextImage()"
        @keydown.arrow-left.window="if (isOpen) prevImage()"
    >
        <div class="section-header reveal">
            <h2 class="section-title">Nuestra Galería</h2>
            <p class="section-subtitle">
                Un vistazo a nuestros acogedores espacios y servicios.
            </p>
        </div>

        <div class="gallery-grid">
            <template x-for="(image, index) in images" :key="index">
                <div class="gallery-item" @click="openLightbox(index)">
                    <img :src="image.src" :alt="image.alt" loading="lazy" />
                    <div class="gallery-item-overlay">
                        <i class="fas fa-search-plus"></i>
                    </div>
                </div>
            </template>
        </div>

        <div
            class="gallery-lightbox"
            x-show="isOpen"
            @click.self="closeLightbox()"
            x-transition:enter="transition ease-out duration-300"
            x-transition:enter-start="opacity-0"
            x-transition:enter-end="opacity-100"
            x-transition:leave="transition ease-in duration-200"
            x-transition:leave-start="opacity-100"
            x-transition:leave-end="opacity-0"
            x-cloak
        >
            <button
                @click="closeLightbox()"
                class="lightbox-close-btn"
                aria-label="Cerrar"
            >
                &times;
            </button>

            <button
                @click.stop="prevImage()"
                class="lightbox-nav-btn prev"
                aria-label="Anterior"
            >
                &#10094;
            </button>
            <button
                @click.stop="nextImage()"
                class="lightbox-nav-btn next"
                aria-label="Siguiente"
            >
                &#10095;
            </button>

            <div class="lightbox-content">
                <img
                    :src="isOpen ? images[currentImageIndex].src : ''"
                    :alt="isOpen ? images[currentImageIndex].alt : ''"
                    class="lightbox-image"
                    @click.stop
                />
                <div
                    class="lightbox-caption"
                    x-text="isOpen ? images[currentImageIndex].alt : ''"
                    @click.stop
                >
                </div>
            </div>
        </div>
    </section>

