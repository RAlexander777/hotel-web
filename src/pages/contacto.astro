---
import Layout from "../layouts/Layout.astro";
import "../styles/contacto.css";

import { Image, getImage } from 'astro:assets';

//HERO IMG
import heroBg from '../assets/images/muelle-con-botes-de-la-ciudad-de-puno-hostal-acuarius-hero.jpg';

const heroBgOptimized = await getImage({ src: heroBg, width: 1920, format: 'webp', quality: 80 });
---

<Layout title="Hostal Acuarius · Contacto" heroLayout={true}>
    <section class="hero-contact" style={`background-image: url(${heroBgOptimized.src});`}>
        <div class="hero-contact-overlay">
            <div class="hero-contact-content">
                <h1 class="hero-contact-title">Contáctanos</h1>
                <p class="hero-contact-subtitle">
                    Estamos aquí para responder tus preguntas. Contáctanos y
                    empieza a planificar tu aventura en Puno.
                </p>
            </div>
        </div>
    </section>

    <main class="contact-section-main">
        <div class="container contact-wrapper">
            <div class="contact-form-container reveal">
                <h2 class="form-title">Envíanos un Mensaje</h2>
                <form
                    action="https://formspree.io/f/mwprzban"
                    method="POST"
                    class="contact-form"
                >
                    <div class="form-group">
                        <label for="name">Nombre</label>
                        <input type="text" id="name" name="name" required />
                    </div>
                    <div class="form-group">
                        <label for="email">Correo Electrónico</label>
                        <input type="email" id="email" name="email" required />
                    </div>
                    <div class="form-group">
                        <label for="message">Mensaje</label>
                        <textarea id="message" name="message" rows="6" required
                        ></textarea>
                    </div>
                    <button type="submit" class="btn">Enviar Mensaje</button>
                </form>
            </div>

            <div class="contact-info-container reveal">
                <h2 class="info-title">Información de Contacto</h2>
                <p class="info-text">
                    También puedes llamarnos o visitarnos. ¡Será un placer
                    atenderte!
                </p>
                <ul class="contact-list">
                    <li>
                        <i class="fas fa-map-marker-alt"></i>
                        <div>
                            <strong>Dirección</strong>
                            <span>Jr. Deza 540, Puno 21001, Perú</span>
                        </div>
                    </li>
                    <li>
                        <i class="fas fa-phone"></i>
                        <div>
                            <strong>Teléfono</strong>
                            <span>+51 944 278 647</span>
                        </div>
                    </li>
                    <li>
                        <i class="fas fa-envelope"></i>
                        <div>
                            <strong>Email</strong>
                            <span>hostalacuariuspuno@gmail.com</span>
                        </div>
                    </li>
                    <li>
                        <i class="fas fa-clock"></i>
                        <div>
                            <strong>Horario</strong>
                            <span>Atención 24 horas</span>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </main>

    <section class="map-section">
        <iframe
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3838.2987780281987!2d-70.02870992404007!3d-15.840886524103288!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x915d695dd2de208d%3A0x34b6cbb487f845c2!2sHostal%20Acuarius%20Puno!5e0!3m2!1ses-419!2spe!4v1760894764117!5m2!1ses-419!2spe"
            width="600"
            height="450"
            style="border:0;"
            allowfullscreen=""
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"></iframe>
    </section>
</Layout>
