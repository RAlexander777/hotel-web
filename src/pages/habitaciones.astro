import Layout from "../layouts/Layout.astro";
import "../styles/habitaciones.css";

import { Image, getImage } from 'astro:assets';

//HERO IMG
import heroBg from '../assets/images/espectacular-vista-al-lago-en-atardecer-puno-hostal-acuarius-hero.png';

//HABITACIONES IMG
import simple1 from '../assets/images/rooms/simple/acogedora-habitacion-simple-hostal-cuarius-puno.png';
