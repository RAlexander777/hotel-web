        getImage({ ...roomImageProps, src: triple5, alt: 'Tres camas cómodas en la habitación triple' })
    ]).then(createItems),

    // Cuádruple
    Promise.all([
        getImage({ ...roomImageProps, src: cuad1, alt: 'Habitación cuádruple con vista a la ciudad, ideal para familias' }),
