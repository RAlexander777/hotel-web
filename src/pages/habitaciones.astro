        getImage({ ...roomImageProps, src: dobleComp2, alt: 'Cama de habitación doble con baño compartido' })
    ]).then(createItems),

    // Matrimonial Compartido
    Promise.all([
        getImage({ ...roomImageProps, src: matriComp1, alt: 'Habitación matrimonial económica con baño compartido' }),
        getImage({ ...roomImageProps, src: matriComp2, alt: 'Cama de habitación matrimonial con baño compartido' })
    ]).then(createItems)
