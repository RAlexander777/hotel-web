import doble7 from '../assets/images/rooms/doble/servicios-higienicos-habitacion-doble-hostal-acuarius-puno.jpg';

import matri1 from '../assets/images/rooms/matrimonial/acogedora-habitacion-matrimonial-con-vista-a-la-ciudad-hostal-acuarius-puno.jpg';
