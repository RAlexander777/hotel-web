---
const { brand = "Hostal Acuarius" } = Astro.props;
---

<header class="navbar">
    <div class="container navbar-content">
        <h1 class="logo">
            <a href="/" class="logo-link">
                <img src="images/logo.webp" alt="Hostal Acuarius" class="logo-img" />
            </a>
        </h1>
        <nav>
            <a href="/">Inicio</a>
            <a href="/habitaciones">Habitaciones</a>
            <a href="/contacto">Contacto</a>
        </nav>
    </div>
</header>

<style>
    .navbar {
        background: rgba(0, 0, 0, 0.9);
        padding: 0.3rem 0; /* aún más reducido */
        position: sticky;
        top: 0;
        z-index: 10;
    }

    .navbar-content {
        display: flex;
        justify-content: space-between;
        align-items: center;
        max-height: 40px; /* limita altura */
    }

    .logo-img {
        height: 150px; /* controla tamaño del logo */
        width: auto;
        display: block;
    }

    nav a {
        margin-left: 1rem;
        color: var(--color-text);
        font-size: 0.9rem;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    nav a:hover {
        color: var(--color-gold);
    }
</style>
