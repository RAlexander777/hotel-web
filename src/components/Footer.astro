---
import { Image } from 'astro:assets';
import logoFooter from '../assets/images/logo-hostal-acuarius-puno.png';

// Importación de Logos de Pago
import visaImg from '../assets/images/pago/visa.png';
import mastercardImg from '../assets/images/pago/mastercard.png';
import amexImg from '../assets/images/pago/americanexpress.png';
import dinersImg from '../assets/images/pago/dinersclub.png';
---

<div x-data="{ showTerms: false }">
    
    <footer class="site-footer">
        <div class="footer-container container">
            
            <div class="footer-col footer-about">
                <Image
                    src={logoFooter}
                    alt="Logo de Hostal Acuarius, Puno"
                    class="footer-logo"
                    height={80}
                    width={300} 
                    format="webp"
                />
                
                <p class="footer-description">
                    Tu refugio de confort y hospitalidad en el corazón de Puno. 
                    Ubicados a solo pasos de la Plaza de Armas, ofrecemos una experiencia 
                    segura y cálida para hacer de tu viaje algo inolvidable.
                </p>

                <div class="payment-section">
                    <span class="payment-title">Medios de Pago Aceptados</span>
                    <div class="payment-grid">
                        <div class="pay-card" title="Visa">
                            <Image src={visaImg} alt="Visa" height={25} format="webp" />
                        </div>
                        <div class="pay-card" title="Mastercard">
                            <Image src={mastercardImg} alt="Mastercard" height={25} format="webp" />
                        </div>
                        <div class="pay-card" title="American Express">
                            <Image src={amexImg} alt="Amex" height={25} format="webp" />
                        </div>
                        <div class="pay-card" title="Diners Club">
                            <Image src={dinersImg} alt="Diners" height={25} format="webp" />
                        </div>
                    </div>
                </div>
            </div>

            <div class="footer-col footer-links">
                <h4 class="footer-title">Navegación</h4>
                <ul>
                    <li><a href="/#nosotros">Nosotros</a></li>
                    <li><a href="/#habitaciones">Habitaciones</a></li>
                    <li><a href="#tours">Tours y Experiencias</a></li>
                    <li><a href="#contacto">Contacto</a></li>
                    <li>
                        <button @click.prevent="showTerms = true" class="btn-terms-link">
                            Términos y Condiciones
                        </button>
                    </li>
                </ul>
            </div>

            <div class="footer-col footer-contact">
                <h4 class="footer-title">Contacto</h4>
                <ul>
                    <li>
                        <i class="fas fa-map-marker-alt"></i>
                        <span>Jr. Cajamarca 206, Puno, Perú</span>
                    </li>
                    <li>
                        <i class="fas fa-phone-alt"></i>
                        <div class="contact-phones">
                            <a href="tel:+51944278647">+51 944 278 647</a>
                            <a href="tel:051775993">(051) 775993</a>
                        </div>
                    </li>
                    <li>
                        <i class="fas fa-envelope"></i>
                        <a href="mailto:hostalacuariuspuno@gmail.com">hostalacuariuspuno@gmail.com</a>
                    </li>
                </ul>
            </div>

            <div class="footer-col footer-social">
                <h4 class="footer-title">Síguenos</h4>
                <div class="social-icons">
                    <a href="https://www.facebook.com/share/1EGQqyvqPe/?mibextid=wwXIfr" aria-label="Facebook" target="_blank" rel="noopener noreferrer">
                        <i class="fab fa-facebook-f"></i>
                    </a>
                    <a href="https://www.instagram.com/acuariusutama/" aria-label="Instagram" target="_blank" rel="noopener noreferrer">
                        <i class="fab fa-instagram"></i>
                    </a>
                </div>
            </div>
        </div>

        <div class="footer-bottom">
            <div class="container footer-bottom-container">
                <p class="copyright">
                    © {new Date().getFullYear()} Hostal Acuarius - Todos los derechos reservados.
                </p>
                <p class="developer-credit">
                    Diseño y Desarrollo por
                    <a href="https://www.linkedin.com/in/rodrigo-alexander-becerra-lucano-268a8121a/" target="_blank" rel="noopener noreferrer">
                        <i class="fab fa-linkedin"></i> Rodrigo Alexander Becerra Lucano
                    </a>
                </p>
            </div>
        </div>
    </footer>

    <div 
        class="terms-modal-overlay" 
        x-show="showTerms" 
        style="display: none;"
        x-transition:enter="transition ease-out duration-300"
        x-transition:enter-start="opacity-0"
        x-transition:enter-end="opacity-100"
        x-transition:leave="transition ease-in duration-200"
        x-transition:leave-start="opacity-100"
        x-transition:leave-end="opacity-0"
    >
        <div class="modal-backdrop" @click="showTerms = false"></div>

        <div class="terms-modal-content" 
             x-show="showTerms"
             x-transition:enter="transition ease-out duration-300"
             x-transition:enter-start="opacity-0 transform translate-y-8 scale-95"
             x-transition:enter-end="opacity-100 transform translate-y-0 scale-100"
        >
            <button class="terms-close-btn" @click="showTerms = false">&times;</button>
            
            <div class="terms-header">
                <h3>Términos y Condiciones</h3>
                <p>Política de Alojamiento y Uso del Sitio Web</p>
            </div>
            
            <div class="terms-body">
                <p class="terms-intro-text">
                    Al acceder a este sitio web (Hostalacuariuspuno.com) y hospedarse en Hostal Acuarius Puno, usted acepta los siguientes términos y condiciones sin limitaciones.
                </p>

                <div class="terms-section">
                    <h4>1. Tarifas</h4>
                    <ul>
                        <li>Las tarifas publicadas son valoradas por cada noche de alojamiento.</li>
                        <li>Las tarifas especiales o promocionales son válidas únicamente reservando en línea a través de nuestra página web.</li>
                        <li>Los precios pueden cambiar sin previo aviso hasta el momento de la confirmación.</li>
                        <li>Las tarifas y pagos se efectúan en <strong>Dólares Estadounidenses (USD)</strong>. Se permite el pago en moneda nacional (Soles) según el tipo de cambio del día.</li>
                    </ul>
                </div>

                <div class="terms-section">
                    <h4>2. Reservaciones y Depósitos</h4>
                    <ul>
                        <li>Las reservas pueden realizarse vía web, Call Center (051-775993) o WhatsApp (+51 944 278 647).</li>
                        <li><strong>Confirmación:</strong> Una reserva solo se considera confirmada tras realizar un <strong>Depósito de Garantía</strong>. De lo contrario, es solo una solicitud.</li>
                        <li><strong>Monto de Garantía:</strong> Se requiere el depósito equivalente a media noche de estadía (o 1 noche en días festivos). Para ofertas especiales, el depósito es del 50%.</li>
                        <li>El saldo pendiente se cancela al momento del Check-in.</li>
                        <li>Los comprobantes de depósito deben enviarse a: <em>hostalacuariuspunoqAa@gmail.com</em>.</li>
                        <li>Las consultas sobre reservas se responden en un plazo máximo de 2 días hábiles.</li>
                    </ul>
                </div>

                <div class="terms-section">
                    <h4>3. Check-in y Check-out</h4>
                    <ul>
                        <li><strong>Check-in (Entrada):</strong> A partir de las 11:00 a.m.</li>
                        <li><strong>Check-out (Salida):</strong> Hasta las 10:30 a.m.</li>
                        <li>Las salidas después de las 10:30 a.m. estarán sujetas al cobro de una noche adicional.</li>
                        <li>Es obligatorio presentar DNI, Pasaporte o Carnet de Extranjería de <strong>todos los ocupantes</strong>, incluyendo niños y visitas.</li>
                        <li><strong>Menores:</strong> Solo pueden ingresar con acompañantes responsables y, si no son sus padres, con autorización notarial.</li>
                        <li><strong>Visitas:</strong> Máximo 30 minutos y deben estar debidamente identificadas.</li>
                    </ul>
                </div>

                <div class="terms-section">
                    <h4>4. Pagos</h4>
                    <ul>
                        <li>Se requiere tarjeta de crédito/débito o depósito en cuenta corriente para fijar la reserva.</li>
                        <li>La información de tarjeta de crédito se usa de forma confidencial solo para procesar el pago.</li>
                        <li>Si elige <strong>"Pagar a la llegada"</strong>, su reserva NO está garantizada y se considera solo una intención de reserva.</li>
                        <li>Se aceptan transferencias bancarias con aviso previo.</li>
                    </ul>
                </div>

                <div class="terms-section">
                    <h4>5. Cambios, Cancelaciones y No-Show</h4>
                    <ul>
                        <li>Cambios sujetos a disponibilidad.</li>
                        <li><strong>Cancelación Gratuita:</strong> Se permite cancelar o modificar sin costo hasta <strong>48 horas antes del check-in</strong> (salvo promociones con condiciones especiales).</li>
                        <li><strong>Penalidad por Cancelación Tardía:</strong> Si no se respeta el plazo de 48h, se cobrarán las noches anuladas.</li>
                        <li><strong>No-Show:</strong> Si el pasajero no se presenta sin notificación previa, se cobrará automáticamente una penalidad de las 2 primeras noches.</li>
                        <li><strong>Temporadas Altas/Festivos:</strong> Cancelaciones requieren 15 días de anticipación (penalidad: 1 noche). En temporada baja (2-5 días previos), la penalidad es 1 noche.</li>
                    </ul>
                </div>

                <div class="terms-section">
                    <h4>6. Servicios del Hostal</h4>
                    <ul>
                        <li><strong>Gratuitos:</strong> WiFi en todo el hotel y custodia de equipaje (hasta la hora de salida/llegada).</li>
                        <li><strong>Con Costo Adicional:</strong> Estacionamiento (Cochera), Lavandería (por prenda/kg), Movilidad (coordinar 24h antes) y Tours.</li>
                        <li>El hotel no se responsabiliza por dinero, joyas u objetos de valor dejados en la habitación. Se recomienda dejarlos en custodia en recepción.</li>
                        <li>Objetos olvidados se guardan por 30 días calendario; vencido el plazo, el hotel dispondrá de ellos.</li>
                    </ul>
                </div>

                <div class="terms-section">
                    <h4>7. Daños al Mobiliario</h4>
                    <p>El huésped deberá cubrir los costos por daños no considerados desgaste natural. Sanciones en Soles (S/.):</p>
                    <ul>
                        <li><strong>S/. 100.00:</strong> Por daños en lencería (sábanas, edredón, almohadas).</li>
                        <li><strong>S/. 300.00:</strong> Por daños en alfombras, muebles y objetos.</li>
                        <li><strong>S/. 1000.00:</strong> Por daños en el colchón.</li>
                    </ul>
                </div>

                <div class="terms-section">
                    <h4>8. Restricciones y Conducta</h4>
                    <ul>
                        <li><strong>No somos Pet Friendly.</strong></li>
                        <li>Prohibido ingresar ropa de cama propia (almohadas, sábanas).</li>
                        <li>Prohibido ingresar aparatos eléctricos para cocinar/calentar. El hotel puede retener estos artículos.</li>
                        <li><strong>Prohibido Fumar:</strong> Según Ley N° 29517, está prohibido fumar en las habitaciones. Sanción: 1 noche de alojamiento o cancelación de estadía.</li>
                        <li>Prohibido el ingreso de personas no registradas y el consumo/tenencia de drogas.</li>
                        <li>Se espera una conducta ordenada que no interrumpa a otros huéspedes. El hotel se reserva el derecho de cancelar la reserva de inmediato ante violaciones de conducta.</li>
                        <li><strong>Smart TV:</strong> El huésped es responsable de cerrar sesión en sus plataformas antes de retirarse.</li>
                    </ul>
                </div>

                <div class="terms-section">
                    <h4>9. Cliente No Grato</h4>
                    <p>Se podrá declarar persona NO GRATA y denegar el servicio por:</p>
                    <ul>
                        <li>Retirarse sin pagar consumos o deudas.</li>
                        <li>Registrarse con información falsa o suplantación de identidad.</li>
                        <li>Uso de dinero o documentos falsificados.</li>
                        <li>Agresiones, amenazas, acoso o robo dentro del hotel.</li>
                        <li>Ingresar con menores sin autorización o acompañantes no identificados.</li>
                    </ul>
                </div>

                <p class="terms-legal">Estos Términos y Condiciones se rigen e interpretan de acuerdo con las leyes del Perú.</p>
            </div>
            
            <div class="terms-footer">
                <button class="btn-accept" @click="showTerms = false">He leído y acepto los términos</button>
            </div>
        </div>
    </div>
</div>

<style>
    :root {
        --color-gold: #c5a47e;
        --color-bg: #111111;
        --color-bg-alt: #1c1c1c;
        --color-text-primary: #e0e0e0;
        --color-text-secondary: #a0a0a0;
        --color-border: #333;
        --font-heading: "Playfair Display", serif;
        --font-body: "Rethink Sans", sans-serif;
    }

    .site-footer {
        background-color: var(--color-bg);
        color: var(--color-text-secondary);
        font-family: var(--font-body);
        font-size: 0.95rem;
        border-top: 1px solid var(--color-border);
        position: relative;
        z-index: 10;
    }
    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1.5rem;
    }
    .footer-container {
        padding: 4rem 1.5rem;
        display: grid;
        grid-template-columns: 1fr;
        gap: 3rem;
    }
    
    /* --- COLUMNA 1 --- */
    .footer-logo {
        height: 80px;
        width: auto;
        margin-bottom: 1.5rem;
    }
    .footer-description {
        color: #ccc;
        line-height: 1.6;
        margin-bottom: 2rem;
        max-width: 350px;
        font-size: 0.95rem;
    }

    /* MEDIOS DE PAGO MEJORADOS */
    .payment-section {
        border-top: 1px solid #333;
        padding-top: 1.5rem;
    }
    .payment-title {
        display: block;
        font-size: 0.85rem;
        color: var(--color-gold);
        text-transform: uppercase;
        font-weight: 700;
        margin-bottom: 1rem;
        letter-spacing: 0.5px;
    }
    .payment-grid {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
    }
    
    /* Tarjetas de Pago */
    .pay-card {
        background-color: #fff;
        border-radius: 4px;
        width: 50px; /* Ancho fijo */
        height: 32px; /* Alto fijo */
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 4px;
        transition: transform 0.2s, box-shadow 0.2s;
        cursor: help;
    }
    
    .pay-card img {
        max-width: 100%;
        max-height: 100%;
        object-fit: contain;
        display: block;
    }
    
    .pay-card.cash {
        width: auto; /* El de efectivo puede ser más ancho para el texto */
        padding: 0 10px;
        background-color: transparent;
        border: 1px solid #27ae60;
        color: #27ae60;
        gap: 6px;
        font-size: 0.85rem;
        font-weight: 600;
    }
    .pay-card.cash i { font-size: 1rem; }

    .pay-card:hover {
        transform: translateY(-3px);
        box-shadow: 0 5px 15px rgba(255, 255, 255, 0.15);
    }
    .pay-card.cash:hover {
        background-color: #27ae60;
        color: #fff;
    }

    /* --- OTRAS COLUMNAS --- */
    .footer-title {
        font-family: var(--font-heading);
        font-size: 1.3rem;
        color: #fff;
        margin-top: 0;
        margin-bottom: 1.5rem;
    }
    .footer-col ul { list-style: none; padding: 0; margin: 0; }
    .footer-col li { margin-bottom: 0.8rem; }
    
    .footer-col a, .btn-terms-link {
        color: var(--color-text-secondary);
        text-decoration: none;
        background: none;
        border: none;
        padding: 0;
        font: inherit;
        cursor: pointer;
        transition: color 0.3s;
        text-align: left;
    }
    .footer-col a:hover, .btn-terms-link:hover { color: var(--color-gold); }

    .footer-contact li { display: flex; gap: 1rem; align-items: flex-start; }
    .footer-contact i { color: var(--color-gold); margin-top: 5px; width: 16px; text-align: center;}
    .contact-phones { display: flex; flex-direction: column; }

    .social-icons { display: flex; gap: 1rem; }
    .social-icons a {
        display: flex; align-items: center; justify-content: center;
        width: 40px; height: 40px;
        background: var(--color-bg-alt);
        border: 1px solid var(--color-border);
        border-radius: 50%;
        color: #fff;
        transition: all 0.3s;
    }
    .social-icons a:hover { background: var(--color-gold); border-color: var(--color-gold); color: #000; }

    .footer-bottom {
        padding: 1.5rem 0;
        border-top: 1px solid #222;
        text-align: center;
        font-size: 0.85rem;
        color: #666;
        background: #0a0a0a;
    }
    .footer-bottom-container { display: flex; flex-direction: column; gap: 0.5rem; align-items: center; }
    .developer-credit a { color: #888; text-decoration: none; transition: 0.3s; }
    .developer-credit a:hover { color: var(--color-gold); }

    /* --- MODAL TÉRMINOS (FIXED + GRANDE) --- */
    .terms-modal-overlay {
        position: fixed !important;
        top: 0; left: 0; width: 100%; height: 100%;
        z-index: 999999; 
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 1rem;
    }
    
    .modal-backdrop {
        position: absolute;
        inset: 0;
        background: rgba(0, 0, 0, 0.9);
        backdrop-filter: blur(4px);
    }

    .terms-modal-content {
        position: relative;
        z-index: 1000000;
        background: #151515;
        width: 100%;
        max-width: 800px; /* ANCHO GRANDE PARA LECTURA */
        max-height: 85vh;
        border-radius: 12px;
        border: 1px solid var(--color-gold);
        display: flex;
        flex-direction: column;
        box-shadow: 0 0 60px rgba(0,0,0,0.9);
    }

    .terms-header {
        padding: 1.5rem 2rem;
        background: #1e1e1e;
        border-radius: 12px 12px 0 0;
        border-bottom: 1px solid #333;
    }
    .terms-header h3 { margin: 0; color: var(--color-gold); font-family: var(--font-heading); font-size: 1.8rem;}
    .terms-header p { margin: 5px 0 0; font-size: 0.95rem; color: #aaa; }

    .terms-body {
        padding: 2rem;
        overflow-y: auto;
        color: #d0d0d0;
        line-height: 1.7;
    }

    .terms-intro-text { font-size: 1rem; margin-bottom: 2rem; font-style: italic; color: #ccc; }

    .terms-section { margin-bottom: 2rem; }
    .terms-section:last-child { margin-bottom: 0; }
    
    .terms-section h4 {
        color: #fff;
        font-size: 1.1rem;
        margin-bottom: 0.8rem;
        border-bottom: 1px dashed #444;
        padding-bottom: 0.5rem;
        display: flex;
        align-items: center;
        gap: 10px;
    }
    .terms-section h4 i { color: var(--color-gold); }
    
    .terms-section ul { padding-left: 1.2rem; font-size: 0.95rem; }
    .terms-section li { margin-bottom: 0.5rem; }
    .terms-section strong { color: #fff; }

    .terms-legal { 
        margin-top: 2rem; 
        padding-top: 1rem; 
        border-top: 1px solid #333; 
        font-size: 0.85rem; 
        color: #777; 
        text-align: center; 
    }

    .terms-footer {
        padding: 1.2rem;
        text-align: center;
        border-top: 1px solid #333;
        background: #1e1e1e;
        border-radius: 0 0 12px 12px;
    }

    .terms-close-btn {
        position: absolute;
        top: 15px;
        right: 20px;
        background: none;
        border: none;
        color: #fff;
        font-size: 2.5rem;
        cursor: pointer;
        line-height: 1;
        transition: 0.3s;
    }
    .terms-close-btn:hover { color: var(--color-gold); transform: scale(1.1); }

    .btn-accept {
        background: var(--color-gold);
        color: #000;
        border: none;
        padding: 0.8rem 3rem;
        border-radius: 30px;
        font-weight: bold;
        cursor: pointer;
        transition: 0.2s;
        text-transform: uppercase;
        letter-spacing: 1px;
        font-size: 0.9rem;
    }
    .btn-accept:hover { background: #fff; transform: scale(1.02); }

    /* --- RESPONSIVE --- */
    @media (min-width: 768px) {
        .footer-container { grid-template-columns: repeat(2, 1fr); }
        .footer-bottom-container { flex-direction: row; justify-content: space-between; }
    }
    @media (min-width: 1024px) {
        .footer-container { grid-template-columns: 2fr 1fr 1.5fr 1fr; }
    }
</style>