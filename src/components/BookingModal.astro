---
/* src/components/BookingModal.astro */
const { lang = 'es' } = Astro.props;

const t = {
    es: {
        title: "Reserva tu Estad√≠a",
        subtitle: "Te confirmaremos disponibilidad v√≠a WhatsApp.",
        // Etiquetas del formulario
        lbl_name: "Nombre Completo *",
        lbl_email: "Email *",
        lbl_phone: "Tel√©fono / WhatsApp",
        lbl_room: "Habitaci√≥n",
        lbl_checkin: "Llegada *",
        lbl_checkout: "Salida *",
        lbl_adults: "Adultos",
        lbl_children: "Ni√±os",
        lbl_msg: "Mensaje / Peticiones",
        lbl_submit: "Solicitar Reserva",
        // Placeholders
        ph_name: "Tu nombre",
        ph_email: "correo@ejemplo.com",
        ph_phone: "+51 999 999 999",
        ph_msg: "Ej: Llegada tarde...",
        // Opciones de Habitaci√≥n (Value y Label)
        rooms: [
            { val: "Cualquiera", label: "Cualquiera disponible" },
            { val: "Simple", label: "Habitaci√≥n Simple" },
            { val: "Doble", label: "Habitaci√≥n Doble" },
            { val: "Matrimonial", label: "Habitaci√≥n Matrimonial" },
            { val: "Triple", label: "Habitaci√≥n Triple" },
            { val: "Cu√°druple", label: "Habitaci√≥n Cu√°druple" },
            { val: "Simple (Ba√±o Comp.)", label: "Simple (Ba√±o Compartido)" },
            { val: "Doble (Ba√±o Comp.)", label: "Doble (Ba√±o Compartido)" },
            { val: "Matrimonial (Ba√±o Comp.)", label: "Matrimonial (Ba√±o Compartido)" }
        ],
        // Mensaje de WhatsApp
        alert_missing: "Por favor completa los campos obligatorios (*)",
        wsp_greeting: "Hola Hostal Acuarius, deseo realizar una reserva:",
        wsp_name: "Nombre",
        wsp_email: "Email",
        wsp_phone: "Tel√©fono",
        wsp_room: "Habitaci√≥n",
        wsp_date: "Fecha",
        wsp_from: "Del",
        wsp_to: "al",
        wsp_pax: "Pasajeros",
        wsp_adults: "Adultos",
        wsp_children: "Ni√±os",
        wsp_note: "Nota"
    },
    en: {
        title: "Book your Stay",
        subtitle: "We will confirm availability via WhatsApp.",
        // Form Labels
        lbl_name: "Full Name *",
        lbl_email: "Email *",
        lbl_phone: "Phone / WhatsApp",
        lbl_room: "Room Type",
        lbl_checkin: "Check-in *",
        lbl_checkout: "Check-out *",
        lbl_adults: "Adults",
        lbl_children: "Children",
        lbl_msg: "Message / Requests",
        lbl_submit: "Request Reservation",
        // Placeholders
        ph_name: "Your name",
        ph_email: "email@example.com",
        ph_phone: "+1 999 999 999",
        ph_msg: "Ex: Late arrival...",
        // Room Options
        rooms: [
            { val: "Any", label: "Any available" },
            { val: "Single Room", label: "Single Room" },
            { val: "Double Room", label: "Double Room" },
            { val: "Matrimonial Room", label: "Matrimonial Room" },
            { val: "Triple Room", label: "Triple Room" },
            { val: "Quadruple Room", label: "Quadruple Room" },
            { val: "Single (Shared Bath)", label: "Single (Shared Bath)" },
            { val: "Double (Shared Bath)", label: "Double (Shared Bath)" },
            { val: "Matrimonial (Shared Bath)", label: "Matrimonial (Shared Bath)" }
        ],
        // WhatsApp Message
        alert_missing: "Please complete the required fields (*)",
        wsp_greeting: "Hello Hostal Acuarius, I would like to make a reservation:",
        wsp_name: "Name",
        wsp_email: "Email",
        wsp_phone: "Phone",
        wsp_room: "Room",
        wsp_date: "Date",
        wsp_from: "From",
        wsp_to: "to",
        wsp_pax: "Guests",
        wsp_adults: "Adults",
        wsp_children: "Children",
        wsp_note: "Note"
    }
};

const text = t[lang as keyof typeof t];
---

<div
    x-data={`{ 
        open: false,
        formData: {
            name: '',
            email: '',
            phone: '',
            room: '${text.rooms[0].val}',
            checkin: '',
            checkout: '',
            adults: '1',
            children: '0',
            message: ''
        },
        init() {
            // Escuchar evento para abrir y pre-llenar habitaci√≥n
            window.addEventListener('open-booking-modal', (e) => {
                this.open = true;
                if (e.detail && e.detail.room) {
                    this.formData.room = e.detail.room;
                }
            });
        },
        sendToWhatsapp() {
            // 1. Validaciones b√°sicas
            if (!this.formData.name || !this.formData.checkin || !this.formData.checkout) {
                alert('${text.alert_missing}');
                return;
            }

            // 2. N√∫mero del Hostal (formato internacional sin +)
            const phoneHotel = '51944278647'; 
            
            // 3. Construir el mensaje (Usamos concatenaci√≥n para evitar conflictos con Astro)
            let text = '${text.wsp_greeting}%0A%0A';
            text += 'üë§ *${text.wsp_name}:* ' + this.formData.name + '%0A';
            text += 'üìß *${text.wsp_email}:* ' + this.formData.email + '%0A';
            text += 'üì± *${text.wsp_phone}:* ' + this.formData.phone + '%0A';
            text += 'üõèÔ∏è *${text.wsp_room}:* ' + this.formData.room + '%0A';
            text += 'üìÖ *${text.wsp_date}:* ${text.wsp_from} ' + this.formData.checkin + ' ${text.wsp_to} ' + this.formData.checkout + '%0A';
            text += 'üë• *${text.wsp_pax}:* ' + this.formData.adults + ' ${text.wsp_adults}, ' + this.formData.children + ' ${text.wsp_children}%0A';
            
            if(this.formData.message) {
                text += 'üìù *${text.wsp_note}:* ' + this.formData.message;
            }

            // 4. Abrir WhatsApp
            const url = 'https://api.whatsapp.com/send?phone=' + phoneHotel + '&text=' + text;
            window.open(url, '_blank');
            
            // 5. Cerrar modal (opcional)
            this.open = false;
        }
    }`}
    @keydown.escape.window="open = false"
    class="booking-modal-root"
>
    <div 
        class="modal-overlay" 
        x-show="open" 
        x-transition.opacity.duration.300ms
        style="display: none;"
    ></div>

    <div 
        class="modal-container" 
        x-show="open" 
        x-transition:enter="transition ease-out duration-300"
        x-transition:enter-start="opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95"
        x-transition:enter-end="opacity-100 translate-y-0 sm:scale-100"
        x-transition:leave="transition ease-in duration-200"
        x-transition:leave-start="opacity-100 translate-y-0 sm:scale-100"
        x-transition:leave-end="opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95"
        style="display: none;"
    >
        <div class="modal-box" @click.outside="open = false">
            <button class="close-btn" @click="open = false">&times;</button>
            
            <div class="modal-header">
                <h2 class="modal-title">{text.title}</h2>
                <p class="modal-subtitle">{text.subtitle}</p>
            </div>

            <form @submit.prevent="sendToWhatsapp" class="modal-form">
                <div class="form-grid">
                    <div class="form-group">
                        <label for="fullName">{text.lbl_name}</label>
                        <input type="text" id="fullName" x-model="formData.name" placeholder={text.ph_name} required />
                    </div>
                    <div class="form-group">
                        <label for="email">{text.lbl_email}</label>
                        <input type="email" id="email" x-model="formData.email" placeholder={text.ph_email} required />
                    </div>
                    <div class="form-group">
                        <label for="phone">{text.lbl_phone}</label>
                        <input type="tel" id="phone" x-model="formData.phone" placeholder={text.ph_phone} />
                    </div>
                    <div class="form-group">
                        <label for="roomType">{text.lbl_room}</label>
                        <select id="roomType" x-model="formData.room">
                            {text.rooms.map((option) => (
                                <option value={option.val}>{option.label}</option>
                            ))}
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="checkin">{text.lbl_checkin}</label>
                        <input type="date" id="checkin" x-model="formData.checkin" required />
                    </div>
                    <div class="form-group">
                        <label for="checkout">{text.lbl_checkout}</label>
                        <input type="date" id="checkout" x-model="formData.checkout" required />
                    </div>
                    <div class="form-group half">
                        <label for="adults">{text.lbl_adults}</label>
                        <select id="adults" x-model="formData.adults">
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                            <option value="4">4+</option>
                        </select>
                    </div>
                    <div class="form-group half">
                        <label for="children">{text.lbl_children}</label>
                        <select id="children" x-model="formData.children">
                            <option value="0">0</option>
                            <option value="1">1</option>
                            <option value="2">2+</option>
                        </select>
                    </div>
                </div>
                
                <div class="form-group full">
                    <label for="requests">{text.lbl_msg}</label>
                    <textarea id="requests" x-model="formData.message" rows="2" placeholder={text.ph_msg}></textarea>
                </div>

                <button type="submit" class="btn-submit">
                    <i class="fab fa-whatsapp"></i> {text.lbl_submit}
                </button>
            </form>
        </div>
    </div>
</div>

<style>
    /* ... (MANT√âN TU CSS EXACTAMENTE IGUAL QUE ANTES) ... */
    /* Estilos exclusivos del Modal */
    .modal-overlay {
        position: fixed;
        inset: 0;
        background: rgba(0, 0, 0, 0.85);
        backdrop-filter: blur(4px);
        z-index: 9998;
    }

    .modal-container {
        position: fixed;
        inset: 0;
        z-index: 9999;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 1rem;
        pointer-events: none; /* Para que el click outside funcione bien en el box */
    }

    .modal-box {
        pointer-events: auto;
        /* Usamos la variable global si est√° disponible, sino fallback */
        background: var(--color-bg-alt, #222224); 
        border: 1px solid var(--color-border, #333);
        border-radius: 12px;
        width: 100%;
        max-width: 600px;
        max-height: 90vh;
        overflow-y: auto; /* Scroll si es muy alto */
        padding: 2rem;
        position: relative;
        box-shadow: 0 20px 50px rgba(0,0,0,0.5);
    }

    .close-btn {
        position: absolute;
        top: 10px;
        right: 15px;
        background: transparent;
        border: none;
        color: #fff;
        font-size: 2rem;
        cursor: pointer;
        line-height: 1;
        transition: color 0.3s;
    }
    .close-btn:hover { color: var(--color-gold, #fc7548); }

    .modal-header { text-align: center; margin-bottom: 1.5rem; }
    .modal-title { font-family: "Playfair Display", serif; color: var(--color-gold, #fc7548); font-size: 1.8rem; margin: 0; }
    .modal-subtitle { color: #aaa; font-size: 0.9rem; margin-top: 0.5rem; }

    /* Formulario Compacto */
    .form-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1rem;
    }

    .form-group { display: flex; flex-direction: column; }
    .form-group.full { grid-column: span 2; }
    
    label { color: #aaa; font-size: 0.85rem; margin-bottom: 0.3rem; }
    
    input, select, textarea {
        background: var(--color-bg, #1A1917);
        border: 1px solid var(--color-border, #333);
        color: #fff;
        padding: 0.6rem;
        border-radius: 6px;
        font-family: "Rethink Sans", sans-serif;
        width: 100%;
    }
    input:focus, select:focus, textarea:focus {
        border-color: var(--color-gold, #fc7548);
        outline: none;
    }

    .btn-submit {
        background: var(--color-gold, #fc7548);
        color: #000;
        font-weight: bold;
        border: none;
        width: 100%;
        padding: 0.8rem;
        border-radius: 6px;
        margin-top: 1.5rem;
        cursor: pointer;
        transition: transform 0.2s, background 0.3s;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
        font-size: 1rem;
    }
    .btn-submit:hover {
        background: #fff;
        transform: translateY(-2px);
    }

    /* Ajuste M√≥vil */
    @media (max-width: 600px) {
        .form-grid { grid-template-columns: 1fr; }
        .form-group.full { grid-column: span 1; }
        .form-group.half { grid-column: span 1; } 
        .modal-box { padding: 1.5rem; }
    }
</style>