---
/* src/components/BookingModal.astro */
---

<div
    x-data="{ 
        open: false,
        formData: {
            name: '',
            email: '',
            phone: '',
            room: 'cualquiera',
            checkin: '',
            checkout: '',
            adults: '1',
            children: '0',
            message: ''
        },
        init() {
            // Escuchar evento para abrir y pre-llenar habitaci√≥n
            window.addEventListener('open-booking-modal', (e) => {
                this.open = true;
                if (e.detail && e.detail.room) {
                    this.formData.room = e.detail.room;
                }
            });
        },
        sendToWhatsapp() {
            // 1. Validaciones b√°sicas
            if (!this.formData.name || !this.formData.checkin || !this.formData.checkout) {
                alert('Por favor completa los campos obligatorios (*)');
                return;
            }

            // 2. N√∫mero del Hostal (formato internacional sin +)
            const phoneHotel = '51944278647'; 
            
            // 3. Construir el mensaje
            let text = `Hola Hostal Acuarius, deseo realizar una reserva:%0A%0A`;
            text += `üë§ *Nombre:* ${this.formData.name}%0A`;
            text += `üìß *Email:* ${this.formData.email}%0A`;
            text += `üì± *Tel√©fono:* ${this.formData.phone}%0A`;
            text += `üõèÔ∏è *Habitaci√≥n:* ${this.formData.room}%0A`;
            text += `üìÖ *Fecha:* Del ${this.formData.checkin} al ${this.formData.checkout}%0A`;
            text += `üë• *Pasajeros:* ${this.formData.adults} Adultos, ${this.formData.children} Ni√±os%0A`;
            
            if(this.formData.message) {
                text += `üìù *Nota:* ${this.formData.message}`;
            }

            // 4. Abrir WhatsApp
            const url = `https://api.whatsapp.com/send?phone=${phoneHotel}&text=${text}`;
            window.open(url, '_blank');
            
            // 5. Cerrar modal (opcional)
            this.open = false;
        }
    }"
    @keydown.escape.window="open = false"
    class="booking-modal-root"
>
    <div 
        class="modal-overlay" 
        x-show="open" 
        x-transition.opacity.duration.300ms
        style="display: none;"
    ></div>

    <div 
        class="modal-container" 
        x-show="open" 
        x-transition:enter="transition ease-out duration-300"
        x-transition:enter-start="opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95"
        x-transition:enter-end="opacity-100 translate-y-0 sm:scale-100"
        x-transition:leave="transition ease-in duration-200"
        x-transition:leave-start="opacity-100 translate-y-0 sm:scale-100"
        x-transition:leave-end="opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95"
        style="display: none;"
    >
        <div class="modal-box" @click.outside="open = false">
            <button class="close-btn" @click="open = false">&times;</button>
            
            <div class="modal-header">
                <h2 class="modal-title">Reserva tu Estad√≠a</h2>
                <p class="modal-subtitle">Te confirmaremos disponibilidad v√≠a WhatsApp.</p>
            </div>

            <form @submit.prevent="sendToWhatsapp" class="modal-form">
                <div class="form-grid">
                    <div class="form-group">
                        <label for="fullName">Nombre Completo *</label>
                        <input type="text" id="fullName" x-model="formData.name" placeholder="Tu nombre" required />
                    </div>
                    <div class="form-group">
                        <label for="email">Email *</label>
                        <input type="email" id="email" x-model="formData.email" placeholder="correo@ejemplo.com" required />
                    </div>
                    <div class="form-group">
                        <label for="phone">Tel√©fono / WhatsApp</label>
                        <input type="tel" id="phone" x-model="formData.phone" placeholder="+51 999 999 999" />
                    </div>
                    <div class="form-group">
                        <label for="roomType">Habitaci√≥n</label>
                        <select id="roomType" x-model="formData.room">
                            <option value="cualquiera">Cualquiera disponible</option>
                            <option value="Habitaci√≥n Simple">Simple</option>
                            <option value="Habitaci√≥n Doble">Doble</option>
                            <option value="Habitaci√≥n Matrimonial">Matrimonial</option>
                            <option value="Habitaci√≥n Triple">Triple</option>
                            <option value="Habitaci√≥n Cu√°druple">Cu√°druple</option>
                            <option value="Simple (Ba√±o Compartido)">Simple (Ba√±o Comp.)</option>
                            <option value="Doble (Ba√±o Compartido)">Doble (Ba√±o Comp.)</option>
                            <option value="Matrimonial (Ba√±o Compartido)">Matrimonial (Ba√±o Comp.)</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="checkin">Llegada *</label>
                        <input type="date" id="checkin" x-model="formData.checkin" required />
                    </div>
                    <div class="form-group">
                        <label for="checkout">Salida *</label>
                        <input type="date" id="checkout" x-model="formData.checkout" required />
                    </div>
                    <div class="form-group half">
                        <label for="adults">Adultos</label>
                        <select id="adults" x-model="formData.adults">
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                            <option value="4">4+</option>
                        </select>
                    </div>
                    <div class="form-group half">
                        <label for="children">Ni√±os</label>
                        <select id="children" x-model="formData.children">
                            <option value="0">0</option>
                            <option value="1">1</option>
                            <option value="2">2+</option>
                        </select>
                    </div>
                </div>
                
                <div class="form-group full">
                    <label for="requests">Mensaje / Peticiones</label>
                    <textarea id="requests" x-model="formData.message" rows="2" placeholder="Ej: Llegada tarde..."></textarea>
                </div>

                <button type="submit" class="btn-submit">
                    <i class="fab fa-whatsapp"></i> Solicitar Reserva
                </button>
            </form>
        </div>
    </div>
</div>

<style>
    /* Estilos exclusivos del Modal */
    .modal-overlay {
        position: fixed;
        inset: 0;
        background: rgba(0, 0, 0, 0.85);
        backdrop-filter: blur(4px);
        z-index: 9998;
    }

    .modal-container {
        position: fixed;
        inset: 0;
        z-index: 9999;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 1rem;
        pointer-events: none; /* Para que el click outside funcione bien en el box */
    }

    .modal-box {
        pointer-events: auto;
        /* Usamos la variable global si est√° disponible, sino fallback */
        background: var(--color-bg-alt, #222224); 
        border: 1px solid var(--color-border, #333);
        border-radius: 12px;
        width: 100%;
        max-width: 600px;
        max-height: 90vh;
        overflow-y: auto; /* Scroll si es muy alto */
        padding: 2rem;
        position: relative;
        box-shadow: 0 20px 50px rgba(0,0,0,0.5);
    }

    .close-btn {
        position: absolute;
        top: 10px;
        right: 15px;
        background: transparent;
        border: none;
        color: #fff;
        font-size: 2rem;
        cursor: pointer;
        line-height: 1;
        transition: color 0.3s;
    }
    .close-btn:hover { color: var(--color-gold, #fc7548); }

    .modal-header { text-align: center; margin-bottom: 1.5rem; }
    .modal-title { font-family: "Playfair Display", serif; color: var(--color-gold, #fc7548); font-size: 1.8rem; margin: 0; }
    .modal-subtitle { color: #aaa; font-size: 0.9rem; margin-top: 0.5rem; }

    /* Formulario Compacto */
    .form-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1rem;
    }

    .form-group { display: flex; flex-direction: column; }
    .form-group.full { grid-column: span 2; }
    
    label { color: #aaa; font-size: 0.85rem; margin-bottom: 0.3rem; }
    
    input, select, textarea {
        background: var(--color-bg, #1A1917);
        border: 1px solid var(--color-border, #333);
        color: #fff;
        padding: 0.6rem;
        border-radius: 6px;
        font-family: "Rethink Sans", sans-serif;
        width: 100%;
    }
    input:focus, select:focus, textarea:focus {
        border-color: var(--color-gold, #fc7548);
        outline: none;
    }

    .btn-submit {
        background: var(--color-gold, #fc7548);
        color: #000;
        font-weight: bold;
        border: none;
        width: 100%;
        padding: 0.8rem;
        border-radius: 6px;
        margin-top: 1.5rem;
        cursor: pointer;
        transition: transform 0.2s, background 0.3s;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
        font-size: 1rem;
    }
    .btn-submit:hover {
        background: #fff;
        transform: translateY(-2px);
    }

    /* Ajuste M√≥vil */
    @media (max-width: 600px) {
        .form-grid { grid-template-columns: 1fr; }
        .form-group.full { grid-column: span 1; }
        .form-group.half { grid-column: span 1; } 
        .modal-box { padding: 1.5rem; }
    }
</style>